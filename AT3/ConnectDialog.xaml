<Window x:Class="AT3.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AT3"
        mc:Ignorable="d"
        Title="Connect?" Height="300" Width="250" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="DialogTextBox" HorizontalAlignment="Left" Height="127" Margin="17,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="16" BorderBrush="{x:Null}"/>
        <Button x:Name="AcceptButton" Content="Yes" HorizontalAlignment="Left" Margin="17,171,0,0" VerticalAlignment="Top" Width="75" Click="AcceptButton_Click" IsDefault="True" FontSize="16"/>
        <Button x:Name="IgnoreButton" Content="Ignore" HorizontalAlignment="Left" Margin="140,171,0,0" VerticalAlignment="Top" Width="75" Click="IgnoreButton_Click" IsCancel="True" FontSize="16"/>

    </Grid>
</Window>
